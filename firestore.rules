rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- USERS ---
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
      
      match /tasks/{taskId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

// ============================================
    // TEAMS COLLECTION
    // ============================================
    match /teams/{teamId} {
      // 1. READ: Members OR Admin can read
      allow read: if request.auth.uid in resource.data.members || request.auth.uid == resource.data.createdBy;
      
      // 2. UPDATE: 
      //    - Admin can update ANYTHING (change name, kick members, etc.)
      //    - Regular users can ONLY update the 'members' list (to join the team)
      allow update: if request.auth.uid == resource.data.createdBy || 
                   (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members']));

      // 3. DELETE: Only Admin can delete the team
      allow delete: if request.auth.uid == resource.data.createdBy;
      
      // 4. CREATE: Anyone can create a team
      allow create: if request.auth != null;

      // ============================================
      // TEAM TASKS SUBCOLLECTION
      // ============================================
      match /tasks/{taskId} {
        // Read: Members OR Admin
        allow read: if request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.members ||
                     request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.createdBy;
        
        // Write (Create/Delete Tasks): Only Admin
        allow create, update, delete: if request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.createdBy;

        // --- SUBTASKS & UPDATES ---
        match /{subCollection}/{docId} {
           // Read/Write: Members OR Admin (for checking boxes and posting updates)
           allow read, write: if request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.members ||
                                 request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.createdBy;
        }
      }
    }

    // --- INVITES ---
    match /invites/{email} {
      allow read, write: if request.auth != null;
    }

    // --- NOTIFICATIONS ---
    match /notifications/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}